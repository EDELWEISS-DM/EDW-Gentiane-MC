############################################################
[name="gamma-46keV" type="genbb::single_particle_generator"]
#@config A single 46 keV gamma ray, isotropic (Pb210 like)

#@description The name of the generated particle
particle_name: string = "gamma"

#@description 4-pi isotropic emission momentum
emission_direction : string = "randomized"

#@description Monokinetic gamma
mode : string = "monokinetic"

#@description Monokinetic energy
energy : real as energy  = 46.0 keV


#################################################################
[name="bkg_model_test" type="genbb::combined_particle_generator"]
#@config A  background model as a combined particle generator

#@description The list of contribution to the radioactivity model
generators.labels : string[5] = \
"contribBi214" \
"contribPb214" \
"contribK40" \
"contribPb210" \
"contribTh234"

#@description The weighting mode associated to the radioactivity model
mode : string = "activity"

#@description The identifiers of the contributing generators (must be defined above/previously)
generators.contribBi214.name     : string = "Bi214"
generators.contribPb214.name     : string = "Pb214"
generators.contribK40.name       : string = "K40"
generators.contribPb210.name     : string = "Pb210"
generators.contribTh234.name     : string = "Th234"

#@description The weights of the contributing generators
generators.contribBi214.activity : real = 10.3 mBq
generators.contribPb214.activity : real = 10.3 mBq
generators.contribK40.activity   : real = 40.2 mBq
generators.contribPb210.activity : real =  5.1 mBq
generators.contribTh234.activity : real =  3.5 mBq


# end of generators.def
